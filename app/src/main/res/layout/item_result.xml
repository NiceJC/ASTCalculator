<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:layout_marginTop="1dp"
    android:background="@color/bg_color"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/tv_level_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.6"
        android:gravity="center"
        android:text="节点1档"
        android:textSize="12sp" />

    <com.ast.astcul.views.ConditionView
        android:id="@+id/cdv_level_progress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        app:concatText="进度"
        app:enableInput="false"
        app:numText="288" />

    <com.ast.astcul.views.ConditionView
        android:id="@+id/cdv_level_coin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:gravity="center"

        app:concatText="币"
        app:enableInput="false"
        app:numText="40" />

    <com.ast.astcul.views.ConditionView
        android:id="@+id/cdv_level_gold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.3"
        android:gravity="center"

        app:concatText="金"
        app:enableInput="false"
        app:numText="1000" />

    <com.ast.astcul.views.ConditionView
        android:id="@+id/cdv_level_gold_per_coin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:gravity="center"
        app:concatText="金"
        app:enableInput="false"
        app:numText="12" />

    <TextView
        android:id="@+id/tv_check"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:gravity="center"
        android:text="点击查看"
        android:textColor="#03A9F4"
        android:textSize="12sp" />
</LinearLayout>